<h1>Editing income</h1>

<%= error_messages_for :income %>

<% form_for(:income, :url => income_path(@income), :html => { :method => :put }) do |f| %>
  <p>
    <b>Income type</b><br />
    <%= f.text_field :income_type %>
  </p>

  <p>
    <b>Monthly total amount</b><br />
    <%= f.text_field :monthly_total_amount %>
  </p>

  <p>
    <%= submit_tag "Update" %>
  </p>
<% end %>

<%= link_to 'Show', income_path(@income) %> |
<%= link_to 'Back', incomes_path %>